{
    "name": "the-language",
    "displayName": "The Language",
    "description": "Support for the Jai language.",
    "version": "0.0.42",
    "repository": {
        "type": "git",
        "url": "https://github.com/onelivesleft/the-language"
    },
    "publisher": "onelivesleft",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:jai"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "jai",
                "aliases": [
                    "Jai",
                    "jai"
                ],
                "extensions": [
                    "jai"
                ],
                "configuration": "./syntaxes/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "jai",
                "scopeName": "source.jai",
                "path": "./syntaxes/jai.json"
            }
        ],
        "configuration": {
            "title": "Jai",
            "properties": {
                "the-language.pathToJaiExecutable": {
                    "type": "string",
                    "default": "c:/jai/bin/jai.exe",
                    "description": "The path to the jai compiler executable."
                },
                "the-language.embedColors": {
                    "type": "array",
                    "title": "Embedded Language Background Color",
                    "properties": {
                        "language": {
                            "type": "string",
                            "description": "Language identifier"
                        },
                        "color": {
                            "type": "string",
                            "description": "Background color of region",
                            "format": "color"
                        }
                    },
                    "default": [
                        {"language": "default", "color": "#222222"}
                    ],
                    "description": "Background colors used when language is embedded in a #string or Markdown code block."
                }
            }
        }
    },
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
    "keywords": [
        "Jai",
        "Language",
        "Programming"
    ]
}
